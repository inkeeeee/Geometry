# Основные настройки проекта
PROJECT_NAME           = "Geometry Library"
PROJECT_NUMBER         = 1.0
PROJECT_BRIEF          = "A C++ template library for geometric computations and 3D rendering"
OUTPUT_DIRECTORY       = Docs
CREATE_SUBDIRS         = NO
OUTPUT_LANGUAGE        = Russian
BRIEF_MEMBER_DESC      = YES

# Настройки ввода
INPUT                  = RectangularMatrix/include \
                         Geometry/include \
                         Graphics/include \
                         CommandInterface \
                         examples \

FILE_PATTERNS          = *.hpp *.cpp *.h
RECURSIVE              = YES
EXCLUDE                = 
EXCLUDE_PATTERNS       = 
EXAMPLE_PATH           = examples
EXAMPLE_RECURSIVE      = YES

# Настройки извлечения
EXTRACT_ALL            = YES
EXTRACT_PRIVATE        = YES
EXTRACT_STATIC         = YES
EXTRACT_LOCAL_CLASSES  = YES
EXTRACT_LOCAL_METHODS  = NO

# Настройки HTML
GENERATE_HTML          = YES
HTML_OUTPUT            = html
HTML_FILE_EXTENSION    = .html
HTML_COLORSTYLE_HUE    = 220
HTML_COLORSTYLE_SAT    = 100
HTML_COLORSTYLE_GAMMA  = 80
HTML_TIMESTAMP         = YES

# Настройки диаграмм
HAVE_DOT               = YES
CLASS_GRAPH            = YES
COLLABORATION_GRAPH    = YES
GROUP_GRAPHS           = YES
UML_LOOK               = NO
TEMPLATE_RELATIONS     = YES
INCLUDE_GRAPH          = YES
INCLUDED_BY_GRAPH      = YES
CALL_GRAPH             = NO
CALLER_GRAPH           = NO
GRAPHICAL_HIERARCHY    = YES
DIRECTORY_GRAPH        = YES
DOT_IMAGE_FORMAT       = png
DOT_PATH               = 
INTERACTIVE_SVG        = NO

# Прочие настройки
GENERATE_LATEX         = NO
GENERATE_MAN           = NO
GENERATE_RTF           = NO
GENERATE_XML           = NO
